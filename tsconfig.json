{
    "compilerOptions": {
        "target": "es2016",
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "baseUrl": "./",
        "resolveJsonModule": true,
        "paths": {
            "@libs/*": ["libs/*"],
            "@modules/*": ["modules/*"],
            "@apps/*": ["apps/*"],
            "@client/*": ["apps/client/src/*"],
        }
    },
    "include": ["apps", "modules", "libs"],
    "exclude": ["node_modules", ".vscode"]
}
