{
    "name": "bricks-cms",
    "version": "0.0.1",
    "description": "",
    "main": "./apps/server/dist/server.js",
    "scripts": {
        "client:dev": "webpack-dev-server --mode development --open --hot",
        "client:build": "webpack --mode production",
        "server:prod": "ts-node ./apps/server/src/server.ts",
        "server:run": "node --inspect=5858 -r ts-node/register ./apps/server/src/server.ts",
        "server:build": "tsc -p ./tsconfig.server.json",
        "server:dev": "nodemon"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules",
            "apps/client"
        ],
        "watch": [
            "config",
            "apps/server",
            "modules",
            "libs"
        ],
        "exec": "npm run server:run",
        "ext": "ts"
    },
    "browser": {
        "child_process": false
    },
    "_moduleAliases": {
        "@root": "./",
        "@libs": "libs",
        "@modules": "modules",
        "@client": "apps/client/src"
    },
    "author": "Nodlik",
    "license": "MIT",
    "express": "^4.17.1",
    "devDependencies": {
        "@babel/node": "^7.10.5",
        "@babel/preset-env": "^7.1.0",
        "@babel/preset-react": "^7.0.0",
        "@types/cors": "^2.8.7",
        "@types/express": "^4.17.7",
        "@types/mongoose": "^5.7.36",
        "@types/node": "^14.6.0",
        "@types/react": "^16.9.48",
        "@types/react-dom": "^16.9.8",
        "@types/react-router-dom": "^5.1.5",
        "@types/sharp": "^0.25.1",
        "babel-plugin-root-import": "^6.5.0",
        "css-loader": "^1.0.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "html-webpack-plugin": "^4.4.1",
        "mongodb": "^3.6.0",
        "mongoose": "^5.10.2",
        "sharp": "^0.26.0",
        "style-loader": "^0.23.0",
        "ts-loader": "^8.0.3",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.2",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0",
        "webpack-node-externals": "^2.5.2",
        "@types/draftjs-to-html": "^0.8.0",
        "@types/mkdirp": "^1.0.1",
        "@types/react-draft-wysiwyg": "^1.13.0",
        "eslint": "^7.7.0",
        "eslint-plugin-import": "^2.22.0",
        "module-alias": "^2.2.2",
        "nodemon": "^2.0.4",
        "prettier": "^2.0.5",
        "dotenv-webpack": "^2.0.0",
        "cors": "^2.8.5"
    },
    "dependencies": {
        "draft-js": "^0.11.7",
        "draftjs-to-html": "^0.9.1",
        "react": "^16.13.0",
        "react-dom": "^16.13.0",
        "react-draft-wysiwyg": "^1.14.5",
        "react-dropzone": "^11.0.3",
        "react-hot-loader": "^4.12.21",
        "react-router-dom": "^5.2.0",
        "react-sortable-hoc": "^1.11.0"
    }
}
